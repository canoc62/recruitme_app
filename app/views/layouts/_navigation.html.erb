  <span class="sr-only">Toggle navigation</span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</button>
<!--<a class="navbar-brand" href="#">Recruit Me</a>-->
 <%= link_to "Recruit Me", root_path, :class => 'navbar-brand'%>
</div>
<div id="navbar" class="navbar-collapse collapse">
  <!--<form class="navbar-form navbar-right">-->
  <% if !logged_in? %>
    <%= form_tag '/login', class: 'navbar-form navbar-right' do %>
      <div class="form-group">
        <!--<input type="text" placeholder="Email" class="form-control">-->
        <%= text_field_tag :username, nil, placeholder: "Username" %>
      </div>
      <div class="form-group">
        <!--<input type="password" placeholder="Password" class="form-control">-->
        <%= password_field_tag :password, nil, placeholder: "Password" %>
      </div>
      <!--<button type="submit" class="btn btn-success">Log in</button>-->
      <div class='form-group'>
        <%= submit_tag 'Login', class: 'btn btn-success' %>
      </div>
    <% end %>
  <% else %>
    <div class='navbar-form navbar-right'>
      
      <div class="btn-group nav_item">
        <%= link_to('', class: 'btn btn-success dropdown-toggle', 'data-toggle' => 'dropdown') do %>
        <%= current_user.username %>
        <span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
        <li><%= link_to "View Profile", user_path(current_user)  %></li>
        <li><%= link_to "Logout", logout_path %></li>
      </ul>
      </div>
    </div>
  <% end %>
  <!--</form>-->
</div>


