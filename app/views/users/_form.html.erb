<div class= 'well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name %>
    </div>
    <div class='control-group>'>
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name %>
    </div>
    <div class='control-group>'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group>'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group>'>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class='control-group>'>
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>
    <div class='control-group>'>
      <%= f.label :height %>
      <%= f.select :height, options_for_select((48..96).to_a.map { |inch| convert_inch(inch) })%>
    </div>
    <div class='control-group>'>
      <%= f.label :weight %>
      <%= f.number_field :weight %>
    </div>
    <div class='control-group>'>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class='control-group>'>
      <%= f.label :state %>
      <%= f.select :state, options_for_select(us_states) %>
    </div>
    <div class='control-group>'>
      <%= f.label :school %>
      <%= f.text_field :school %>
    </div>
    <div class='control-group'>
      <%= f.label :graduation_year, 'Graduation Year' %>
      <%= f.number_field :graduation_year %>
    </div>
    <div class='control-group>'>
      <%= f.label :gpa, 'GPA' %>
      <%= f.number_field :gpa, step: 'any' %>
    </div>
    <div class='control-group>'>
      <%= f.label :position, 'Position(s)' %>
      <%= f.collection_select(:position_ids, Position.all, :id, :position_title, {}, {:multiple => true}) %>
    </div>
    <%= f.submit (@user.new_record? ? 'Register' : 'Update Profile') , class: 'btn btn-success' %>
  <% end %>
</div>





