<div class= 'well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class='control-group>'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class='control-group>'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group>'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group>'>
      <%= f.label :age %>
      <%= f.text_field :age %>
    </div>
    <div class='control-group>'>
      <%= f.label :height %>
      <%= f.text_field :height %>
    </div>
    <div class='control-group>'>
      <%= f.label :weight %>
      <%= f.text_field :weight %>
    </div>
    <div class='control-group>'>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class='control-group>'>
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class='control-group>'>
      <%= f.label :school %>
      <%= f.text_field :school %>
    </div>
    <div class='control-group>'>
      <%= f.label :year %>
      <%= f.text_field :year %>
    </div>
    <div class='control-group>'>
      <%= f.label :position %>
      <%= f.text_field :position %>
    </div>
    <%= f.submit (@user.new_record? ? 'Register' : 'Update Profile') , class: 'btn btn-success' %>
  <% end %>
</div>
