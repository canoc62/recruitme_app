      <%= f.label :field_goals_made %>
      <%= f.text_field :field_goals_made %>
    </div>
    <div class='control-group>'>
      <%= f.label :pat_attempts %>
      <%= f.text_field :pat_attempts %>
    </div>
    <div class='control-group>'>
      <%= f.label :pat_made %>
      <%= f.text_field :pat_made %>
    </div>
    <%= f.submit (@game_stat.new_record? ? 'Submit Stats' : 'Update Stats') , class: 'btn btn-success' %>
  <% end %>
</div>