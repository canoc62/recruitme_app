<div class= 'well'>
  <%= form_for [@user, @game_stat], :url => {:controller => 'game_stats', :action => 'create'}  do |f| %>
    <div class='control-group'>
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>
    <div class='control-group>'>
      <%= f.label :opponent %>
      <%= f.text_field :opponent %>
    </div>
    <div class='control-group>'>
      <%= f.label :pass_attempts %>
      <%= f.text_field :pass_attempts %>
    </div>
    <div class='control-group>'>
      <%= f.label :pass_yards %>
      <%= f.text_field :pass_yards %>
    </div>
    <div class='control-group>'>
      <%= f.label :pass_tds %>
      <%= f.text_field :pass_tds %>
    </div>
    <div class='control-group>'>
      <%= f.label :pass_int %>
      <%= f.text_field :pass_int %>
    </div>
    <div class='control-group>'>
      <%= f.label :rush_attempts %>
      <%= f.text_field :rush_attempts %>
    </div>
    <div class='control-group>'>
      <%= f.label :rush_yards %>
      <%= f.text_field :rush_yards %>
    </div>
    <div class='control-group>'>
      <%= f.label :rush_tds %>
      <%= f.text_field :rush_tds %>
    </div>
    <div class='control-group>'>
      <%= f.label :receptions %>
      <%= f.text_field :receptions %>
    </div>
    <div class='control-group>'>
      <%= f.label :receiving_yards %>
      <%= f.text_field :receiving_yards %>
    </div>
    <div class='control-group>'>
      <%= f.label :receiving_tds %>
      <%= f.text_field :receiving_tds %>
